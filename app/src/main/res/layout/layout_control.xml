<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_btn_up"
        android:background="@drawable/up"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/res_btn_left"
        android:layout_toEndOf="@+id/res_btn_left"
        android:clickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_btn_left"
        android:background="@drawable/left"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/res_btn_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_btn_right"
        android:background="@drawable/right"
        android:layout_alignTop="@+id/res_btn_left"
        android:layout_toRightOf="@+id/res_btn_down"
        android:layout_alignBottom="@+id/res_btn_left"
        android:clickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_btn_down"
        android:background="@drawable/down"
        android:layout_below="@+id/res_btn_right"
        android:layout_alignLeft="@+id/res_btn_up"
        android:layout_alignStart="@+id/res_btn_up"
        android:layout_alignRight="@+id/res_btn_up"
        android:layout_alignEnd="@+id/res_btn_up"
        android:clickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_btn_stop"
        android:background="@drawable/stop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_txt_status"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/res_btn_stop"
        android:layout_alignStart="@+id/res_btn_stop"
        android:layout_alignRight="@+id/res_btn_stop"
        android:layout_alignEnd="@+id/res_btn_stop" />


</RelativeLayout>